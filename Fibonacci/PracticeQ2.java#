import java.util.Scanner;

class PracticeQ2 {
    public static void main(String[] args) {
        int firstTerm = 1;
        int secondTerm = 2;
        int result = 0;
        int total = 0;

        int i = 0;
        while(i < 4000000) {
            result = firstTerm + secondTerm;
            firstTerm = result;
            if(i%2 == 0) {
                total = total + result;
            }
            i++;
        }
    }
}


